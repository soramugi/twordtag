<% title @user.name + ' ' + @date.to_s %>

<div class="col-xs-12">
  <div class="col-xs-2">
    <a href="<%= user_path(@user.name) %>">
      <%= image_tag @user.image_url, {width: 100, class: 'img-thumbnail'} %>
      <%= "@#{@user.name}" %>
    </a>
  </div>
  <div class="col-xs-10">
    <p><%= @date %></p>
    <div class="well col-xs-12">
      <% if @tag_log %>
        <% if @tag_log.tags.count > 0 %>
          <% @tag_log.tags.each do |tag| %>
            <div class="col-xs-2">
              <%= tag.count %>
              <%= link_to tag.word, tag_path(tag.word) %>
            </div>
          <% end %>
        <% else %>
          <p>抽出できるtagがありませんでした</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
