<h1>Sessions#index</h1>
<p>Find me in app/views/sessions/index.html.erb</p>

<ul>
  <% if current_user  %>
    <% if notice %>
      <li><%= notice %></li>
    <% end %>
    <li>ようこそ <%= current_user.name %>さん</li>
    <li><%= link_to "ログアウト", "/signout" %></li>
  <% else %>
    <li><%= link_to "Twitterでログイン", "/auth/twitter" %></li>
  <% end %>
</ul>
